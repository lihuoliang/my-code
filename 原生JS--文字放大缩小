	<title>文字放大缩小</title>
	<meta http-equiv="Content-Type" content="text/html; charset=utf-8" />

	<style type="text/css">
	
	</style>
	<script type="text/javascript">
	window.onload=function (){
		var oBtn1=document.getElementById('btn1');
		var oBtn2=document.getElementById('btn2');
		var oBtn3=document.getElementById('btn3');
		var oBtn4=document.getElementById('btn4');
		var oP=document.getElementById('p1');
		var num=16;
		oBtn1.onclick=function (){
			num-=2;
			oP.style.fontSize=num+'px';
		};
		oBtn2.onclick=function (){
			num=num +2;
			//num+=2;
			oP.style.fontSize=num+'px';
			//alert(num);

		};
		oBtn3.onclick=function (){
			oP.className='red';


		};
		oBtn4.onclick=function (){
			oP.className='yellow';


		};
	};

	</script>
	<style type="text/css">
    .red{width: 300px;background-color: red;border:10px solid #f1f1f1;padding: 20px;font-size: yellow;}
    .yellow{width: 300px;background-color: yellow;border:10px solid #f1f1f1;padding: 20px;font-size: red;}
	</style>
